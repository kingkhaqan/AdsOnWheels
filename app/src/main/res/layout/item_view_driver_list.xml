<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_dl_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/cerclebackgroundpink"
        android:src="@drawable/ic_person_black_24dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/iv_dl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nauman Ali"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_dl_image"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/iv_dl_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0308-4133221"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/iv_dl_image"
        app:layout_constraintTop_toBottomOf="@id/iv_dl_name"
        android:paddingLeft="10dp"/>

</android.support.constraint.ConstraintLayout>